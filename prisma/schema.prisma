datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int     @id @default(autoincrement())
  name        String
  email       String
  matchesHome Match[] @relation("HomeMatches")
  matchesAway Match[] @relation("AwayMatches")
}

model Match {
  id         Int  @id @default(autoincrement())
  homeTeamId Int
  awayTeamId Int
  homeScore  Int
  awayScore  Int
  homeTeam   User @relation("HomeMatches", fields: [homeTeamId], references: [id])
  awayTeam   User @relation("AwayMatches", fields: [awayTeamId], references: [id])
}
