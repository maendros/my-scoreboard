{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Next.js",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/next",
        "args": ["dev"],
        "runtimeArgs": ["--inspect"],
        "port": 9229,
        "cwd": "${workspaceFolder}",
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true,
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }
  